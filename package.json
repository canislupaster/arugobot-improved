{
  "name": "arugobot",
  "version": "1.0.0",
  "description": "Discord bot for Codeforces practice challenges",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "build": "tsc --noEmit",
    "dev": "tsx src/index.ts",
    "start": "tsx src/index.ts",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "test": "NODE_OPTIONS=--max-old-space-size=1024 jest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "better-sqlite3": "^12.6.2",
    "chart.js": "^4.5.1",
    "chartjs-node-canvas": "^5.0.0",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "hono": "^4.11.5",
    "kysely": "^0.28.10"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "pnpm": {
    "overrides": {
      "tar": "^7.5.4",
      "undici": "^6.23.0"
    },
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "canvas",
      "esbuild"
    ],
    "ignoredBuiltDependencies": [
      "unrs-resolver"
    ]
  }
}
